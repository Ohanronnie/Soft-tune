:root{
  --white: #D2D2D2
}
body {
    font-size: 15pt;
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    background-color: #13131D;
    color: white;
    font-family: normal;
}
.div {
  display: grid;
  height: 100vh;
  width: 100vw;
  gap: .2vw;
  grid-template-areas: 'aside header header'
  'aside body main' 
  'footer footer footer';

}
.div div{
  background-color: ;
}
.div .aside{
  grid-area: aside;
  width: 20vw;
  padding: 1.5vw;
  border-right: 1px solid #333;
}
.div .header{
  grid-area: header;  
  height: 38vh;
}
.div .content{
  height: 55vh;
  grid-area: body;
  width: 55vw;
}
.div .main{
  grid-area: main;
  width: calc(100vw - (55vw + 21vw));
}
.div .footer{
  grid-area: footer;
  height: 10vh;
  display: flex;
  background-color: rgba(100,101, 115, 0.5);
  align-items: center;
  padding: 1vw;
  position: fixed;
  bottom: 0;
  width: 100%;
}
