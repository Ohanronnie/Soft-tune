.slider {
  -webkit-appearance: none;
  width: 10px;
  height: 25px;
  background: #2328ff;
  outline: none;
  opacity: 1;
  -webkit-transition: .2s;
  transition: opacity .2s;
}

.slider:hover {
  opacity: 1;
}

.slider::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  width: 25px;
height: 25px;
  background: #2328ff;
  cursor: pointer;
}
.slider,.volume {
  -webkit-appearance: none;
  width: 30%;
  height: 5px;
  background: #8C8C8C;
  outline: none;
  opacity: 1;
  border-radius: 2px;
  -webkit-transition: .2s;
  margin: 0 2vw;
  transition: opacity .2s;
}

.slider:hover ,.volume:hover{
  opacity: 1;
}

.slider::-webkit-slider-thumb,.volume::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  border: 0.5px solid #ddd;
  background: #FFF;
